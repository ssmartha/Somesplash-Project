<h1 class="edit_h1">Search</h1>  
<%= form_with url: "/search", method: :get do |form| %>
    <%= form.text_field :query, placeholder: "search", class: "edit_name_text" %>
    <%= form.submit "SEARCH PHOTOS", class: "edit_input_submit"%>
<% end %>

<% if @query %>
<p><%= @pictures.size %> pictures found</p><br/>
<% @pictures.each do |picture| %>
  <div><%= image_tag picture.photo %></div>

<%= picture.title %><br>
<%= picture.comments_count %> comments <br>
<%= link_to "show", picture_path(picture)%>
<%= link_to "edit", edit_picture_path(picture) %>
<%= link_to "destroy", picture_path(picture), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
    }%><br>
<% end %>

<% end %>
<div>
  <%= link_to "Back", categories_path , class: "edit_input_back" %>
</div>
